/* Swiper 전체 컨테이너 */
.mySwiper {
    width: 100%;                
    height: 800px;               
    aspect-ratio: 16 / 9;      
    margin: auto;
}

/* 각 슬라이드 */
.mySwiper .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
}

/* 이미지 크기 */
.mySwiper .swiper-slide img {
    width: 100%;               
    height: 100%;               
    object-fit: cover;         
}

/* 반응형 스타일 */
@media (max-width: 1200px) {
    .mySwiper {
        height: 600px;  
    }
}

@media (max-width: 768px) {
    .mySwiper {
        height: 400px;  
    }
}

@media (max-width: 480px) {
    .mySwiper {
        height: 300px;  
    }
}