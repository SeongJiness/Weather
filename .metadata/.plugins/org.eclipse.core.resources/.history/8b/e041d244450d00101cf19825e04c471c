/* Swiper 전체 컨테이너 */
.mySwiper {
    width: 100%;                /* 가로 크기 100% */
    height: auto;               /* 높이는 자동으로 조정 */
    aspect-ratio: 16 / 9;       /* 가로 16: 세로 9 비율 유지 */
    margin: auto;
}

/* 각 슬라이드 */
.mySwiper .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
}

/* 이미지 크기 */
.mySwiper .swiper-slide img {
    width: 100%;                /* 이미지 가로 100% */
    height: 100%;               /* 이미지 세로 100% */
    object-fit: cover;          /* 비율을 유지하며 이미지를 잘라서 맞추기 */
}

/* 반응형 스타일 */
@media (max-width: 1200px) {
    .mySwiper {
        height: 600px;  /* 화면 크기가 1200px 이하일 경우 높이를 조정 */
    }
}

@media (max-width: 768px) {
    .mySwiper {
        height: 400px;  /* 화면 크기가 768px 이하일 경우 높이를 더 줄임 */
    }
}

@media (max-width: 480px) {
    .mySwiper {
        height: 300px;  /* 모바일 화면 크기에서는 높이를 더 줄여줌 */
    }
}